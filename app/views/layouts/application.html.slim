doctype html
html
  head
    title Podfilter
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    meta name="viewport" content="width=device-width, initial-scale=1.0"
  body
    header class="navbar navbar-default" role="navigation"
      nav.container
        #navbar-main
          a class="navbar-brand" href="/" Podfilter
          ul class="nav navbar-nav"
            li
              a href='/impressum' Impressum
            - if user_signed_in?
              li.dropdown
                a href="#" class="dropdown-toggle" data-toggle="dropdown"
                  ' Du bist angemeldet
                  span.caret

                ul class="dropdown-menu"
                  li
                    = link_to 'Dashboard', dashboard_path
                  - current_user.opml_files.each do |file|
                    li
                      = link_to 'OPML-File', opml_file_path(file)
    section.container
      - if flash[:notice]
        .alert.alert-success
          = flash[:notice]
      - if flash[:alert]
        .alert.alert-error
          = flash[:alert]
      = yield
    footer
      .container
        .row
          .col-lg-12
            h3
              | Podfilter.de
              = ' '
              small #{Source.count} Podcasts indiziert. Davon #{Source.active.count} aktive, #{Source.inactive.count} inaktive, #{Source.error.count} mit Fehlern/bzw. neu hinzugef√ºgt und #{Source.offline.count} sind offline.
        .row
          .col-lg-12
            ul.list-unstyled
              li: a href='https://github.com/zealot128/podfilter.de' Issues/Contributing on Github


