- if can? :add, source
  - has = current_user.sources.where(id: source.id).count > 0
  span.btn-group<>
    button type='button'  class="btn-xs btn btn-primary dropdown-toggle" data-toggle="dropdown"
      - if has
        i.fa.fa-check.fa-fw
      - else
        i.fa.fa-plus.fa-fw
      span.caret
    ul class="dropdown-menu" role="menu"
      - current_user.opml_files.each do |file|
        li
          - if file.sources.include?(source)
            a href=remove_source_from_opml_path(file,source) title='Von dieser Liste entfernen' data-method='post'
              i.fa.fa-check.fa-fw
              = file.to_s
          - else
            a href=add_source_to_opml_path(file,source) title='Zu dieser Liste hinzuf√ºgen' data-method='post'
              i.fa.fa-plus.fa-fw
              = file.to_s
