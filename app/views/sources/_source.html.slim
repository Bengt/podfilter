.source-list-item
  .pull-left.text-center
    - if (source.weight rescue false)
      - sim = [ 100, source.weight / 5.0 * 100].min.to_i
      .progress.similarity(title="Empfehlung: #{sim}%")
        .progress-bar.progress-bar-default(style="width: #{sim}%")
        .sr-only #{sim}% Empfehlung
    - if source.image.present?
      = image_tag source.image.url(:thumb)
  div
    .source-title
      strong
        = link_to source.title, source

        - if source.offline?
          span.label.label-default
            'offline
        - if source.active === false
          span.label.label-default
            'inaktiv
    code
      = link_to source.url do
        = source.url
    br
    small.text-muted
      ' #{source.opml_files.count} Abonnenten, #{source.episodes.count} Episoden
    - if can? :add, source
      span.btn-group
        button type='button'  class="btn-xs btn btn-default dropdown-toggle" data-toggle="dropdown"
          ' manage
          span.caret
        ul class="dropdown-menu" role="menu"
          - current_user.opml_files.each do |file|
            li
              - if file.sources.include?(source)
                a href='' title='Von dieser Liste entfernen'
                  i.fa.fa-check.fa-fw
                  = file.to_s
              - else
                a href='' title='Zu dieser Liste hinzuf√ºgen'
                  i.fa.fa-plus.fa-fw
                  = file.to_s
